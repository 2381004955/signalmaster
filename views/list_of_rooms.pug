extends layout_dashboard

block dashboardContent
  section.content-narrower
    table
      thead
        tr
          th
          th Active
          th Last 24 hours
          th Last 7 days
      tbody
        tr
          td Rooms (Total)
          td #{activeRoomCount}
          td #{prevDayRoomCount}
          td #{prevWeekRoomCount}
        tr
          td Rooms (Unique)
          td #{activeRoomCount}
          td #{prevDayUniqueRoomCount}
          td #{prevWeekUniqueRoomCount}
        tr
          td Sessions (Total)
          td #{activeSessionCount}
          td #{prevDaySessionCount}
          td #{prevWeekSessionCount}
        tr
          td Sessions (Mobile)
          td #{activeMobileSessionCount}
          td #{prevDayMobileSessionCount}
          td #{prevWeekMobileSessionCount}
        tr
          td Sessions (Desktop)
          td #{activeDesktopSessionCount}
          td #{prevDayDesktopSessionCount}
          td #{prevWeekDesktopSessionCount}
    table
      thead
        tr
          th Workers
          th Queue Size
          th Queue Clock
      tbody
        tr
          td Events
          td #{eventQueue}
          td #{eventClock}
        tr
          td Room Reports
          td #{roomReportQueue}
          td #{roomReportClock}

  section
    h1 Recent rooms
    table
      thead
        tr
          th Name
          th Created
          th Duration
      each val in data
        tr
          td
            a(href='/dashboard/rooms/' + val.id) #{val.name}
          td #{val.created_at}
          td #{val.duration}
    div
      h3 Pages
      //- each page, index in pages
      //-   span
      //-     a(href='dashboard?limit=25&page=' + (index + 1)) #{index + 1}
