{
  "redis": {
    "module": "redis",
    "connection": {
      "host": "$REDIS_HOST",
      "port": "$REDIS_PORT",
      "password": "$REDIS_PASSWORD"
    }
  },
  "isDevTLS": false,
  "tls": {
    "*": {
      "pemFile": "$PATH_TO_STAR_PEM",
      "keyFile": "$PATH_TO_STAR_KEY"
    }
  },
  "auth": {
    "secret": "$INTERNAL_API_KEY",
    "options": {
      "algorithm": "HS256"
    }
  },
  "db": {
    "connection": "$DATABASE_URL"
  },
  "server": {
    "port": 8003,
    "routes": {
      "cors": true
    }
  },
  "billing": {
    "ice": true,
    "roomReports": false 
  },
  "talky": {
    "apiVersion": "2.0.0",

    "admins": {
      "admin": "$ADMIN_PASSWORD"
    },
    "license": "$TALKY_LICENSE",
    "apiKey": "$CUSTOMER_API_KEY",

    "domains": {
      "api": "$API_DOMAIN",
      "api_private": "$$API_PRIVATE_DOMAIN",
      "rooms": "$ROOMS_DOMAIN"
    },

    "ice": {
      "secret": "$TURN_SECRET",
      "server": "$ICE_URL"
    },

    "metrics": {
      "maskRoomNames": true
    },

    "screensharingExtensions": {
      "chrome": "ikljcimogjdaoojhmkbioipmffflodgk"
    },

    "orgs": {
      "andyet": {
        "enabled": true,
        "secret": "$CUSTOMER_API_KEY",
        "maskRoomNames": true,
        "screensharingExtensions": {
          "chrome": "$CHROME_EXTENSION_ID"
        }
      },
      "talky": {
        "enabled": true,
        "secret": "$CUSTOMER_API_KEY",
        "maskRoomNames": true,
        "screensharingExtensions": {
          "chrome": "$CHROME_EXTENSION_ID"
        }
      }
    }
  },
  "good": {
    "includes": {
      "request": ["headers"]
    },
    "reporters": {
      "console": [{
        "module": "good-squeeze",
        "name": "Squeeze",
        "args": [{
          "log": "*",
          "response": "*",
          "request": "*",
          "error": "*"
        }]
      }, {
        "module": "good-console"
      }, "stdout"
      ]
    }
  }
}
