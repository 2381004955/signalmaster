{
  "redis": {
    "module": "redis",
    "connection": {
      "host": "$REDIS_HOST",
      "port": "$REDIS_PORT",
      "password": "$REDIS_PASSWORD"
    }
  },
  "auth": {
    "secret": "$INTERNAL_API_KEY",
    "options": {
      "algorithm": "HS256"
    }
  },
  "db": {
    "connection": "$DATABASE_URL"
  },
  "server": {
    "port": 8003,
    "routes": {
      "cors": true
    }
  },
  "billing": {
    "activity": true,
    "ice": true,
    "roomReports": false
  },
  "talky": {
    "apiVersion": "2.0.0",

    "admins": {
      "admin": "$ADMIN_PASSWORD"
    },

    "domains": {
      "api": "$API_DOMAIN",
      "api_private": "$$API_PRIVATE_DOMAIN"
    },

    "ice": {
      "secret": "$TURN_SECRET",
      "server": "$ICE_URL"
    },

    "metrics": {
      "maskRoomNames": true
    },

    "orgs": {
      "andyet": {
        "active": true,
        "secret": "$CUSTOMER_API_KEY",
        "maskRoomNames": true
      },
      "talky": {
        "active": true,
        "secret": "$CUSTOMER_API_KEY",
        "maskRoomNames": true
      }
    }
  },
  "good": {
    "includes": {
      "request": ["headers"]
    },
    "reporters": {
      "console": [{
        "module": "@hapi/good-squeeze",
        "name": "Squeeze",
        "args": [{
          "log": "*",
          "response": "*",
          "request": "*",
          "error": "*"
        }]
      }, {
        "module": "@hapi/good-console"
      }, "stdout"
      ]
    }
  }
}
