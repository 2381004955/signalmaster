{
  "isDevTLS": false,
  "TLS": {
    "pemFile": "/etc/prosody_certs/certs.pem",
    "keyFile": "/etc/prosody_certs/certs.key"
  },
  "good": {
    "includes": {
      "request": ["headers"]
    },
    "reporters": {
      "console": [{
        "module": "good-squeeze",
        "name": "Squeeze",
        "args": [{
          "log": "*",
          "response": "*",
          "request": "*",
          "error": "*"
        }]
      }, {
        "module": "good-console"
      }, "stdout"
      ]
    }
  },
  "auth": {
    "secret": "internal-use-jwt-password-makethisoneprettysecureok",
    "options": {
      "algorithm": "HS256"
    }
  },
  "db": {
    "host": "$POSTGRES_HOST",
    "user": "talky",
    "password": "password",
    "database": "talky_api"
  },
  "server": {
    "port": 8003
  },
  "talky": {
    "license": { "roomLimit": 5, "userLimit": 5, "expiresIn": "30d" },

    "apiKey": "customer-api-shared-jwt-password-makethisoneprettysecureok",

    "domains": {
      "api": "stage-api.talky.me",
      "guests": "stage-guests.talky.me",
      "rooms": "stage-rooms.talky.me"
    },

    "ice": {
      "secret": "$TURN_SECRET",
      "servers": [
        "http://turn-stage.talky.io:8000"
      ]
    },

    "metrics": {
      "maskRoomNames": true
    }
  }
}
