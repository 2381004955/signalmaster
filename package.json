{
  "name": "talky-core-api",
  "version": "1.3.0",
  "description": "Talky Core API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "lint": "eslint .",
    "knex": "knex",
    "createdb": "psql -d postgres -c \"CREATE ROLE $(node -pe 'require(\"getconfig\").db.user') WITH PASSWORD '$(node -pe 'require(\"getconfig\").db.password')' NOSUPERUSER NOCREATEDB NOCREATEROLE INHERIT LOGIN\" && createdb $(node -pe 'require(\"getconfig\").db.database') -O $(node -pe 'require(\"getconfig\").db.user')",
    "destroydb": "psql -d postgres -c \"DROP DATABASE $(node -pe 'require(\"getconfig\").db.database')\" && psql -d postgres -c \"DROP ROLE $(node -pe 'require(\"getconfig\").db.user');\"",
    "test": "lab -a code -L -v -e test -I __core-js_shared__",
    "coverage": "lab -a code -e test -L -r html -o coverage.html",
    "start-prosody": "node ./scripts/start-prosody",
    "purge-pii": "node ./scripts/purge-pii",
    "prosody-config": "node ./scripts/prosody-config",
    "prosody-config-install-docker": "npm run -s prosody-config > config/prosody.cfg.lua",
    "prosody-config-install-local": "npm run -s prosody-config > /usr/local/etc/prosody/prosody.cfg.lua",
    "prosody-config-install-etc": "npm run -s prosody-config > /etc/prosody/prosody.cfg.lua",
    "prosody-config-generate": "npm run -s prosody-config > ./prosody.cfg.lua",
    "certgen": "openssl req -nodes -new -x509 -keyout config/key.pem -out config/cert.pem -days 365"
  },
  "author": "",
  "license": "See LICENSE file",
  "dependencies": {
    "@now-ims/hapi-now-auth": "^1.1.1",
    "array-shuffle": "^1.0.1",
    "base32-crockford-browser": "^1.0.0",
    "boom": "^7.2.0",
    "getconfig": "^4.5.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.5.3",
    "hapi-auth-basic": "^5.0.0",
    "hapi-pagination": "^2.0.0",
    "hapi-swagger": "^9.1.1",
    "http-proxy": "^1.17.0",
    "humanize-duration": "^3.15.1",
    "inert": "^5.1.0",
    "jsonwebtoken": "^8.3.0",
    "keyfob": "^1.0.0",
    "knex": "^0.15.2",
    "minimist": "^1.2.0",
    "muckraker": "^4.0.1",
    "pg": "^7.4.3",
    "pug": "^2.0.3",
    "redis": "^2.8.0",
    "ua-parser-js": "^0.7.18",
    "vision": "^5.3.3"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.2",
    "code": "^5.2.0",
    "eslint": "^5.2.0",
    "eslint-config-andyet": "^2.1.0",
    "faker": "^4.1.0",
    "git-validate": "^2.2.4",
    "lab": "^15.5.0",
    "nock": "^9.4.4",
    "readline-sync": "^1.4.9",
    "redis-mock": "^0.29.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "private": true
}
