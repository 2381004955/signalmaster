{
  "name": "api.talky.io",
  "version": "1.3.0",
  "description": "Talky Metrics API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "lint": "eslint .",
    "knex": "knex",
    "createdb": "psql -d postgres -c \"CREATE ROLE talky WITH PASSWORD 'password' NOSUPERUSER NOCREATEDB NOCREATEROLE INHERIT LOGIN\" && createdb talky_api -O talky",
    "destroydb": "psql -d postgres -c \"DROP DATABASE talky_api\" && psql -d postgres -c \"DROP ROLE talky;\"",
    "test": "lab -a code -L -v -e test",
    "coverage": "lab -a code -e test -L -r html -o coverage.html",
    "start-prosody": "node ./scripts/start-prosody",
    "purge-pii": "node ./scripts/purge-pii",
    "prosody-config": "node ./scripts/prosody-config",
    "prosody-config-install-docker": "npm run -s prosody-config > config/prosody.cfg.lua",
    "prosody-config-install-local": "npm run -s prosody-config > /usr/local/etc/prosody/prosody.cfg.lua",
    "prosody-config-install-etc": "npm run -s prosody-config > /etc/prosody/prosody.cfg.lua",
    "prosody-config-generate": "npm run -s prosody-config > ./prosody.cfg.lua",
    "dev-license-gen": "node ./scripts/dev-license-gen",
    "certgen": "openssl req -nodes -new -x509 -keyout config/key.pem -out config/cert.pem -days 365"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "array-shuffle": "^1.0.1",
    "base32-crockford-browser": "^1.0.0",
    "boom": "^5.1.0",
    "getconfig": "^3.1.0",
    "good": "^7.2.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.4.3",
    "hapi-auth-basic": "^4.2.0",
    "hapi-auth-jwt2": "^7.2.4",
    "hapi-pagination": "^1.20.0",
    "hapi-swagger": "^7.7.0",
    "http-proxy": "^1.16.2",
    "humanize-duration": "^3.10.0",
    "inert": "^4.2.0",
    "jsonwebtoken": "^7.4.1",
    "keyfob": "^1.0.0",
    "knex": "^0.13.0",
    "muckraker": "^3.4.0",
    "pg": "^6.2.4",
    "pug": "^2.0.0-rc.2",
    "ua-parser-js": "^0.7.12",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "chance": "^1.0.9",
    "cheerio": "^1.0.0-rc.2",
    "code": "^4.1.0",
    "eslint": "^4.4.1",
    "eslint-config-andyet": "^2.1.0",
    "faker": "^4.1.0",
    "git-validate": "^2.2.2",
    "lab": "^14.1.0",
    "minimist": "^1.2.0",
    "nock": "^9.0.14",
    "nodemon": "^1.11.0",
    "readline-sync": "^1.4.7"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
